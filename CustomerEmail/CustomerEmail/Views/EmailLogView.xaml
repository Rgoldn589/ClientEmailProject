<Window x:Class="CustomerEmail.Views.EmailLogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerEmail.Views"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="Email Log View" Height="800" Width="1200">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Grid.ColumnSpan="2" 
               Content="Email Log" 
               Background="AliceBlue" 
               HorizontalAlignment="Center" 
               FontWeight="Bold" 
               FontSize="30"/>

        <DataGrid AlternatingRowBackground="LightBlue"
                  Grid.Row="1"
                  MaxWidth="1150"
                  AlternationCount="1"               
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Log}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Email" 
                                    Binding="{Binding Email}"
                                    Width="250"/>
                <DataGridTextColumn Header="Subject" 
                                    Binding="{Binding Subject}"
                                    Width="250"/>
                <DataGridTextColumn Header="Message" 
                                    Width="425"
                                    Binding="{Binding Message}"/>
                <DataGridTextColumn Header="Date Sent" 
                                    Width="125"
                                    Binding="{Binding LogDate}"/>
                <DataGridTextColumn Header="Result" 
                                    Width="50"
                                    Binding="{Binding Result}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Close" 
                Grid.Row="2" 
                Command="{Binding Close}" 
                MaxWidth="50" 
                MinHeight="40" 
                MinWidth="100" 
                Margin="10"/>
    </Grid>
</Window>
