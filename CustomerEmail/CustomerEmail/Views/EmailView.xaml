<Window x:Class="CustomerEmail.Views.EmailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerEmail.Views"
        mc:Ignorable="d"
        Title="Email" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="110"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="New Message" Background="AliceBlue" FontWeight="Bold" FontSize="20"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Name"  FontSize="15"  VerticalContentAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EmailValues.Name, Mode=TwoWay}"  VerticalAlignment="Top" FontSize="15" Margin ="0, 10, 25, 10" Height="30" />

        <Label Grid.Row="2" Grid.Column="0" Content="Email Address"  FontSize="15"  VerticalContentAlignment="Center" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EmailValues.EmailAddress, Mode=TwoWay}"  VerticalAlignment="Top" FontSize="15" Margin ="0, 10, 25, 10" Height="30" />

        <Label Grid.Row="3" Grid.Column="0" Content="Subject" FontSize="15"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EmailValues.Subject, Mode=TwoWay }" FontSize="15" Margin ="0,0,25,10" Height="30" />

        <Label Grid.Row="4" Grid.Column="0" Content="Message" FontSize="15"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding EmailValues.Message, Mode=TwoWay}" FontSize="15" Margin ="0,0,25,10" MinHeight="300" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" />

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" VerticalAlignment="Top" MaxHeight="75">
            <Button Content="Close" Command="{Binding Close}" IsCancel="True" MinHeight="40" MinWidth="100" Margin="10"/>
            <Button Content="Send" Command="{Binding Send}" MinHeight="40" MinWidth="100" Margin="10"/>
            <Label Content="{Binding ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding IsError, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="Crimson" MinWidth="250"/>
        </StackPanel>
    </Grid>
</Window>
