<Window x:Class="CustomerEmail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerEmail"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="Email" Height="200" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Client Email" HorizontalContentAlignment="Center"  Background="AliceBlue" FontWeight="Bold" FontSize="30"/>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" MaxHeight="75">
            <Button Content="Close" Command="{Binding Close}" IsCancel="True" MinHeight="40" MinWidth="100" Margin="10"/>
            <Button Content="Send Email" Command="{Binding Send}" MinHeight="40" MinWidth="100" Margin="10"/>
            <Button Content="View Log" Command="{Binding ViewLog}" MinHeight="40" MinWidth="100" Margin="10"/>
        </StackPanel>
    </Grid>
    
</Window>
